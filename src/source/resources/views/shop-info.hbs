<div class="shop-info">
  <div class="column">
    <div class="logo-section">
      <img class="shop-logo" src="{{account.avatar}}" alt="Shop Logo" />

      <div class="name-report">
        <h1 class="shop-name">{{account.shopName}}</h1>
        <button id="report-button" class="button">Report</button>
      </div>
    </div>
  </div>
  {{#if _isSeller}}
    <div class="column">
      <div class="info-section">
        <div class="info-row">
          <p class="category">Number of products:</p>
          <p class="content">{{_numberOfProduct}}</p>
        </div>

        <div class="info-row">
          <p class="category">Number of reviews:</p>
          <p class="content">{{_numberOfReview}}</p>
        </div>

        <div class="info-row">
          <p class="category">Average rating:</p>
          <p class="content">{{_avgOfRating}}</p>
        </div>
      </div>
    </div>
    <div class="col product-section">
      <section class="trend container">
        <div class="trend-row row">
          {{#each products}}
            <div class="col-3">
              <div class="trend-card card" data-id="{{this._id}}">
                <a
                  href="/product/specific-product/{{this._id}}"
                  class="trend-card-img"
                >
                  <img
                    src="{{this.image}}"
                    class="trend-prod-img"
                    alt="Something ..."
                  />
                </a>
                <p class="trend-card-title">{{this.name}}</p>
                <p class="trend-card-price">{{this.price}} VND</p>
                <a href="#" class="btn trend-card-btn">Buy now</a>
              </div>
            </div>
          {{else}}
            <div class="col">
              <div class="announcement">
                Không có sản phẩm phù hợp
              </div>
            </div>
          {{/each}}
        </div>
      </section>
      <script>
        let numberOfItems = {{_numberOfItems}};
        let limit = {{_limit}};
        let currentPage = {{_currentPage}};
        let leftMost = currentPage - ((currentPage - 1) % 3);
      </script>
      {{>pagination}}
    </div>
  {{/if}}

</div>

<script src="/js/shop-info.js"></script>